{
	"name": "@watergis/svelte-maplibre-attribute-table",
	"description": "This is a svelte component to add attribute table plugin to maplibre.",
	"version": "3.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/watergis/svelte-maplibre-components.git",
		"directory": "packages/attribute-table"
	},
	"keywords": [
		"maplibre",
		"maplibre-gl-js",
		"attribute table"
	],
	"author": "Jin IGARASHI",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/watergis/svelte-maplibre-components/issues"
	},
	"homepage": "https://github.com/watergis/svelte-maplibre-components/tree/main/packages/attribute-table#readme",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/kit": "^2.5.24",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@typescript-eslint/eslint-plugin": "^8.2.0",
		"@typescript-eslint/parser": "^8.2.0",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"pmtiles": "^3.0.7",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.10",
		"sass": "^1.77.8",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"tslib": "^2.7.0",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.2.0",
		"vite": "^5.4.2"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@vincjo/datatables": "^2.0.0",
		"@watergis/svelte-maplibre-menu": "workspace:^",
		"maplibre-gl": "^4.6.0"
	}
}
